<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Login</title>
</head>
<body>
{{ if . }}
    <!-- Error message -->
    <p style="color: red" >{{.}}</p>
{{ end }}
<form action="/login/" method="post">
    <input type="email" title="Username (email address)" placeholder="someone@your-domain.com" name="Username">
    <input type="password" title="Password" placeholder="Password" name="Password">
    <input type="submit">
</form>
</body>
</html>
